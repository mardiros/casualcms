{% set breadcrumb = page.metadata.breadcrumb %}
<nav class="breadcrumb is-small" aria-label="breadcrumbs">
  <ul>
    {% for p in breadcrumb.items %}
    <li {% if loop.last %}class="is-active" {% endif %}>
      <a href="{{p.url}}" {% if loop.last %}aria-current="page" {% endif %}>
        {{p.title}}
      </a>
    </li>
    {% endfor %}
  </ul>
</nav>
<script type="application/ld+json">
{{breadcrumb.ld_json}}
</script>