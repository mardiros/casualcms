{% set card = block %}
<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      {{card.title}}
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      {{card.content}}
    </div>
  </div>
  {% if card.footer_links %}
  <footer class="card-footer">
    {%- for link in card.footer_links -%}
    {{ include_block(link, class_name="card-footer-item") }}
    {%- endfor -%}
  </footer>
  {% endif %}
</div>