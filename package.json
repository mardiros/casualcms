{
  "name": "casualcms-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^2.0.8",
    "@chakra-ui/react": "^2.2.8",
    "@chakra-ui/theme": "^2.1.7",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@rjsf/chakra-ui": "^4.2.3",
    "@rjsf/core": "^4.2.3",
    "framer-motion": "^6.5.1",
    "idb": "^7.0.2",
    "neverthrow": "^4.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@parcel/transformer-sass": "^2.7.0",
    "@testing-library/react": "^13.3.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.52",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.6",
    "global-jsdom": "^8.5.0",
    "jsdom": "^20.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "prop-types": "^15.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "test": "mocha -r ts-node/register -r global-jsdom/register tests/webapp/**/*.test.ts*",
    "cov": "nyc mocha -r ts-node/register -r global-jsdom/register tests/webapp/**/*.test.ts*",
    "watch": "parcel watch src/webapp/index.html --public-url /admin/ --dist-dir ./src/casualcms/ui/webapp_compiled  --log-level info",
    "build_dev": "parcel build src/webapp/index.html --public-url /admin/ --dist-dir ./src/casualcms/ui/webapp_compiled --no-optimize --log-level info",
    "build": "parcel build src/webapp/index.html --public-url /admin/ --dist-dir ./src/casualcms/ui/webapp_compiled"
  },
  "nyc": {
    "cache": false,
    "check-coverage": false,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "coverage/**",
      "node_modules/**",
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "sourceMap": true,
    "reporter": [
      "html"
    ],
    "all": true,
    "instrument": true
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
